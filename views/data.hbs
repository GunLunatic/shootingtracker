{{>navbar}}

<div class="container-fluid">
  <div class="container mst-container-main">

    <div class="mst-button-row">

        <a href="#" class="btn btn-default"><i class="fa fa-download"></i>Download</a>

    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Location</th>
          <th>Dead</th>
          <th>Injured</th>
          <th>Shooter's Name</th>
          <th>Synopsis</th>
          <th>News articles</th>
        </tr>
      </thead>

{{!--
sample record:

{ _id: '56241713111497a82e69a1d5',
state: 'GA',
city: 'Savannah',
__v: 0,
flagged: [],
sources: [ 'http://savannahnow.com/crime/2015-01-02/police-1-dead-4-injured-overnight-savannah-shooting' ],
categories: [],
comments: [],
wounded: 4,
killed: 1,
perpetrators: [ { name: 'Unknown', _id: '56241713111497a82e69a1d6' } ],
date: '2015-01-02T08:00:00.000Z' }

--}}

<tbody>
 {{#each data}}
 <tr>
   <td>{{date}}</td>
   <td>{{city}},&nbsp;{{state}}</td>
   <td>{{killed}}</td>
   <td>{{wounded}}</td>
   <td>
     {{#each perpetrators}}
     <div>{{name}}</div>
     {{/each}}
   </td>
   <td>{{synopsis}}</td>
   <td>
     <ol>
     {{#each sources}}
       <li>
         <a target="_blank" href="{{this}}" title="{{this}}"><i class="fa fa-external-link"></i></a>
       </li>
     {{/each}}
     </ol>
   </td>
 </tr>
 {{/each}}

</tbody>

</table>
</div>
</div>
