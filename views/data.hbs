{{>navbar}}

<div class="container-fluid">
  <div class="container mst-container-main">

    <div class="mst-button-row">

        <a href="#" class="btn btn-default"><i class="fa fa-download"></i>Download</a>

    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Location</th>
          <th>Dead</th>
          <th>Injured</th>
          <th>Shooter's Name</th>
          <th>Synopsis</th>
          <th>News articles</th>
        </tr>
      </thead>
      <tbody>
        {{#each data.shootings}}
        <tr>
          <td>{{date}}</td>
          <td>{{location}}</td>
          <td>{{killed}}</td>
          <td>{{wounded}}</td>
          <td>{{name}}</td>
          <td>{{synopsis}}</td>
          <td>
            <ol>
            {{#each sources}}
              <li>
                <a target="_blank" href="{{this}}" title="{{this}}"><i class="fa fa-external-link"></i></a>
              </li>
            {{/each}}
            </ol>
          </td>
        </tr>
        {{/each}}

      </tbody>

    </table>
  </div>
</div>
